{
  "root_directory": "data/datasets/LIVE2+KonIQ-10K/",
  "train_directory": "train",
  "val_directory": "val",
  "train_lb": "train_labels.csv",
  "val_lb": "val_labels.csv",
  "augment": true,
  "batch_size": 16,
  "epoch_size": 40,
  "continue_train": {
    "from_epoch": 0,
    "from_weights": ""
  },
  "lr": {
    "name": "constant",
    "value": 1e-4
  },
  "loss": {
    "name": "mse"
  },
  "callbacks": {
    "tensorboard": {
      "log_dir": "data/logs/resnet50_384x512_bsz16_MSE_LIVE2+KonIQ-10K/00",
      "histogram_freq": 1
    },
    "model_checkpoint": {
      "ckpt_dir": "data/models/resnet50_384x512_bsz16_MSE_LIVE2+KonIQ-10K/00",
      "ckpts": [
        {
          "monitor": "val_loss",
          "mode": "min",
          "save_best_only": true,
          "save_weights_only": true
        },
        {
          "monitor": "val_plcc",
          "mode": "max",
          "save_best_only": true,
          "save_weights_only": true
        }
      ]
    }
  }
}