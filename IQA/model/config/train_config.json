{
  "data_directory": "data/datasets/KonIQ-10K/",
  "train_directory": "train",
  "val_directory": "val",
  "train_lb": "train_labels.csv",
  "val_lb": "val_labels.csv",
  "augment": true,
  "crop_image": true,
  "batch_size": 16,
  "epoch_size": 50,
  "continue_train": {
    "from_epoch": 0,
    "from_weights": ""
  },
  "lr": {
    "name": "step_decay",
    "value": {
      "initial_lr": 1e-4,
      "factor": 1e-5,
      "decay_step": 10
    }
  },
  "loss": {
    "name": "mse"
  },
  "callbacks": {
    "tensorboard": {
      "log_dir": "data/logs/resnet50_KonIQ-10K_224x224_bsz16_MSE/01",
      "histogram_freq": 1
    },
    "model_checkpoint": {
      "ckpt_dir": "data/models/resnet50_KonIQ-10K_224x224_bsz16_MSE/01",
      "ckpts": [
        {
          "monitor": "val_loss",
          "mode": "min",
          "save_best_only": true,
          "save_weights_only": true
        },
        {
          "monitor": "val_plcc",
          "mode": "max",
          "save_best_only": true,
          "save_weights_only": true
        }
      ]
    }
  }
}